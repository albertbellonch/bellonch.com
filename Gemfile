# Source
source 'http://rubygems.org'

# Jekyll
gem 'jekyll'

# Assets
gem 'jekyll-assets'
gem 'yui-compressor'
gem 'uglifier'
gem 'autoprefixer-rails'

# Live reloading
group :jekyll_plugins do
  gem 'jekyll-livereload'
end

# Tools
gem 'jekyll-sitemap'

# Deployment
gem 'capistrano'
gem 'capistrano-bundler'
gem 'airbrussh', require: false
